<div style="background-color: #DDD; background-repeat: no-repeat; background-size:cover;overflow: hidden; padding-bottom: 100px;min-height: 100vh;">

  <div style=" max-width:800px; margin-top: 50px; margin-bottom: 50px; margin-right:auto; margin-left: auto; background-color: #fff; padding: 30px;top: 50px; position: relative; ">
    <h2 style="text-align:center; color:#5E5E5E;">登入 / 註冊</h2>
    <div class="row">
      <div class="col-md-12">
        <div class="form-actions fb-login-btn" style="margin-left: auto;margin-right: auto; margin-top:40px; margin-bottom:40px; max-width:300px;">

          <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
        </div>
        <a><p style="text-align: center;">沒有Facebook?<br>請使用下列手動註冊..</p></a>
      </div>
    </div>
    <div class="row more-login-field" style="overflow: hidden; min-height: 500px; ">
      <div class="col-md-6" style="padding:40px;">
        <h2 style="text-align:center; color:#5E5E5E;">註冊</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name, required: true, autofocus: true %>
          <%= f.input :email, required: true %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
          <%= f.input :password_confirmation, required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, t('helpers.submit.user.create'), class:"home-btn" %>
        </div>
      <% end %>
      </div>
      <div class="col-md-6" style="padding:40px;">
        <h2 style="text-align:center; color:#5E5E5E;">登入</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs" style="color:#5E5E5E; margin:20px;">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <%= f.button :submit, "登入", class:"home-btn" %>
          </div>
        <% end %>
        <div style="padding-left:20px;">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
